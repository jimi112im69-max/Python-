 
class Book:
    def __init__(self, title, author):
        self.title = title
        self.author = author
        self.is_borrowed = False

class User:
    def __init__(self, name):
        self.name = name
        self.borrowed = []

    def borrow(self, book):
        if not book.is_borrowed:
            book.is_borrowed = True
            self.borrowed.append(book)
            print(f"{self.name} зае '{book.title}'")
        else:
            print(f"'{book.title}' вече е заета")

    def return_book(self, book):
        if book in self.borrowed:
            book.is_borrowed = False
            self.borrowed.remove(book)
            print(f"{self.name} върна '{book.title}'")

class Library:
    def __init__(self):
        self.books = []

    def add_book(self, book):
        self.books.append(book)

lib = Library()
b1 = Book("1984", "Оруел")
b2 = Book("Майсторът и Маргарита", "Булгаков")
lib.add_book(b1)
lib.add_book(b2)

user = User("Иван")
user.borrow(b1)
user.borrow(b1)  
user.return_book(b1)
user.borrow(b1)
 

