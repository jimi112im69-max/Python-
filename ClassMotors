 
class Motor:
    counter = 0

    def __init__(self, model, power):
        self.model = model
        self.power = power
        Motor.counter += 1

    @classmethod
    def get_motor_count(cls):
        return cls.counter

    def __str__(self):
        return f"Motor(model={self.model}, power={self.power} HP)"



motor1 = Motor("Yamaha", 150)
motor2 = Motor("Honda", 200)
motor3 = Motor("Suzuki", 180)

print(motor1)
print(motor2)
print(motor3)

print(f"Общо създадени мотори: {Motor.get_motor_count()}")
 

